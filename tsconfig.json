{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": false,
    "noImplicitAny": false,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/sdk/*": ["./src/sdk/*"],
      "@/app/*": ["./src/app/*"],
    },
    
    /** Iversify */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "jest.config.mjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "@types/**/*.d.ts"
, "jest.config.cjs.backup" ],
  "exclude": ["node_modules", "coverage", ".storybook", ".next", "dist", "jest.config.mjs", "node_modules/superjson/dist/**/*"],
}
